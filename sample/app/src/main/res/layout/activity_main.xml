<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marcoscg.fabscrollanimationsexample.MainActivity">

    <Button
        android:id="@+id/defaultbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_centerInParent="true"
        android:text="DEFAULT"
        android:textSize="20sp"
        android:onClick="startDefault"/>

    <Button
        android:id="@+id/fadebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_centerInParent="true"
        android:text="FADE"
        android:textSize="20sp"
        android:layout_below="@id/defaultbtn"
        android:onClick="startFade"/>

    <Button
        android:id="@+id/floatbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="FLOAT"
        android:textSize="20sp"
        android:layout_below="@id/fadebtn"
        android:onClick="startFloat"/>

</RelativeLayout>
